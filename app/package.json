{
    "name": "multitetris",
    "version": "0.0.1",
    "type": "module",
    "author": "lorene-k",
    "license": "MIT",
    "scripts": {
        "eslint": "eslint src",
        "client-dist": "NODE_ENV=production webpack --progress",
        "client-dev": "webpack-dev-server --hot --host 0.0.0.0 --port 8080",
        "srv-dev": "DEBUG=tetris:* nodemon --exec babel-node src/server/main.js",
        "srv-dist": "DEBUG=tetris:* babel src --out-dir dist",
        "test": "mocha \"test/**/*.js\" --require @babel/register --reporter spec",
        "coverage": "NODE_ENV=test nyc --include \"src/shared/**/*.js\" --include \"src/server/**/*.js\" --all --reporter=text --reporter=lcov --require @babel/register mocha \"test/**/*.js\""
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.11.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-redux": "^9.2.0",
        "redux": "^5.0.1",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^3.1.0",
        "seedrandom": "^3.0.5",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.25.9",
        "@babel/core": "^7.26.0",
        "@babel/node": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-react": "^7.25.9",
        "@babel/register": "^7.25.9",
        "@eslint/js": "^9.17.0",
        "babel-loader": "^9.2.1",
        "babel-plugin-istanbul": "^7.0.0",
        "chai": "^4.5.0",
        "chai-as-promised": "^8.0.0",
        "eslint": "^9.17.0",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^15.14.0",
        "mocha": "^10.8.2",
        "nodemon": "^3.1.9",
        "nyc": "^17.1.0",
        "webpack": "^5.104.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.2.2"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    },
                    "modules": false
                }
            ],
            [
                "@babel/preset-react",
                {
                    "runtime": "automatic"
                }
            ]
        ],
        "env": {
            "test": {
                "presets": [
                    [
                        "@babel/preset-env",
                        {
                            "targets": {
                                "node": "current"
                            }
                        }
                    ]
                ],
                "plugins": [
                    "istanbul"
                ]
            }
        }
    }
}
