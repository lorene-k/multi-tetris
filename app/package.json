{
    "name": "multitetris",
    "version": "0.0.1",
    "type": "module",
    "author": "lorene-k",
    "license": "MIT",
    "scripts": {
        "eslint": "eslint src",
        "client-dev": "vite --config src/client/vite.config.js",
        "client-dist": "vite build --config src/client/vite.config.js",
        "srv-dev": "DEBUG=tetris:* nodemon src/server/main.js",
        "srv-dist": "DEBUG=tetris:* babel src --out-dir dist",
        "test": "mocha \"test/**/*.js\" --require @babel/register --reporter spec",
        "coverage": "c8 --reporter=text --reporter=lcov --include=\"src/shared/**/*.js\" --include=\"src/server/**/*.js\" --all mocha \"test/**/*.js\" --require @babel/register"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.11.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-redux": "^9.2.0",
        "redux": "^5.0.1",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^3.1.0",
        "seedrandom": "^3.0.5",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.25.9",
        "@babel/core": "^7.26.0",
        "@babel/node": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-react": "^7.25.9",
        "@babel/register": "^7.25.9",
        "@eslint/js": "^9.17.0",
        "@vitejs/plugin-react": "^5.1.2",
        "babel-plugin-istanbul": "^7.0.0",
        "c8": "^10.1.3",
        "chai": "^4.5.0",
        "chai-as-promised": "^8.0.0",
        "eslint": "^9.17.0",
        "eslint-plugin-react": "^7.37.5",
        "globals": "^15.14.0",
        "mocha": "^10.8.2",
        "nodemon": "^3.1.9",
        "sinon": "^21.0.1",
        "vite": "^7.3.0"
    },
    "c8": {
        "all": true,
        "exclude": [
            "build/**",
            "dist/**",
            "test/**",
            "node_modules/**",
            "**/*.test.js"
        ]
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-react",
                {
                    "runtime": "automatic"
                }
            ]
        ],
        "env": {
            "test": {
                "presets": [
                    [
                        "@babel/preset-env",
                        {
                            "targets": {
                                "node": "current"
                            }
                        }
                    ]
                ],
                "plugins": [
                    "istanbul"
                ]
            }
        }
    }
}
